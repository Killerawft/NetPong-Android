<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.netpong.rene.netpong.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:layout_marginRight="10dp"
            android:gravity="top|right" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="3"
            android:id="@+id/etIPEnd"
            android:text="99"
            android:digits="1234567890"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_row="1"
            android:layout_column="2"
            android:maxEms="3"
            android:minEms="1" />

        <TextView
            android:text="IP Adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvIP"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/etIPStart"
            tools:text="000.000.000."
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textAlignment="center"
            android:textColor="?attr/editTextColor"
            android:layout_marginRight="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:elevation="1dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:ems="5"
            android:id="@+id/etName"
            android:inputType="text"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_above="@+id/bCon1"
            android:layout_alignParentEnd="true"
            android:layout_row="0"
            android:layout_column="1"
            android:maxEms="5"
            android:minEms="1" />
    </GridLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.64" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:text="Spieler 1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/bCon1"
                android:layout_alignParentStart="true"
                style="@style/Widget.AppCompat.Button"
                android:visibility="visible"
                android:onClick="ConPlay1"
                android:layout_row="0"
                android:layout_column="0"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:text="Spieler 2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/bCon2"
                android:layout_alignParentBottom="true"
                style="@style/Widget.AppCompat.Button"
                android:visibility="visible"
                android:onClick="ConPlay2"
                android:layout_row="1"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:text="Verbindung trennen"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/bDisc"
                android:layout_alignParentBottom="true"
                style="@style/Widget.AppCompat.Button"
                android:visibility="visible"
                android:onClick="ConPlay2"
                android:layout_row="1"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</LinearLayout>
