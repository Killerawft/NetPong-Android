<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.netpong.rene.netpong.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="Spieler 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bCon2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bCon1"
        android:layout_marginBottom="31dp" />

    <Button
        android:text="Spieler 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:id="@+id/bCon1"
        android:layout_above="@+id/bCon2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="192.168.1.99"
        android:ems="10"
        android:layout_marginStart="14dp"
        android:id="@+id/eIP"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bCon1" />

    <TextView
        android:text="IP Adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/eIP"
        android:layout_alignBottom="@+id/eIP"
        android:layout_toStartOf="@+id/bCon2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="5"
        android:id="@+id/editText2"
        android:layout_below="@+id/eIP"
        android:layout_alignStart="@+id/eIP" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/editText2"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignEnd="@+id/textView" />
</RelativeLayout>
